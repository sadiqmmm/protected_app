<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Protected App", "/", class: "brand" %>
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <% if user_signed_in? %>
        <div class="nav-collapse collapse">
          <ul class="nav pull-right">
            <li>
              <%= form_tag(items_path, :method => "get", class: "navbar-form") do %>
                <%= text_field_tag :search, params[:search], class: "span3", placeholder: "Search your files", "data" => {"provide" => "typeahead", "source" => @search_items} %>
                <%= submit_tag "Search", class: "btn", name: nil %>
              <% end %>
              <!--<form class="navbar-form">
                <input type="text" class="span4" placeholder="Search your files">
                <button type="submit" class="btn">Submit</button>
              </form>-->
            </li>
            <li class="dropdown">
              <%= link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
                <%= current_user.email %> <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="icon-off"></i> Log out
                  <% end %>
                </li>
              </ul>
            </li>
          </ul>
        </div>
       <% end %> 
    </div>
  </div>
</div>