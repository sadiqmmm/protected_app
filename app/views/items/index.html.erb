<h1>Listing items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Login</th>
    <th>Password</th>
    <th>Login url</th>
    <th>Notes</th>
    <th>Folder</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.title %></td>
    <td><%= item.login %></td>
    <td><%= item.password %></td>
    <td><%= item.login_url %></td>
    <td><%= item.notes %></td>
    <td><%= item.folder_id %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

