<div class="row-fluid">
  <div class="span9">
    <ul class="breadcrumb">
      <li><a href="#">Home</a> <span class="divider">/</span></li>
    </ul>
  </div>
  <div class="span3">
    <%= link_to new_folder_path, class: "btn btn-block btn-success" do %>
      <i class="icon-white icon-plus-sign"></i> New folder
    <% end %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <table class="table table-striped">
      <tr>
        <th>Root folders</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <% Folder.roots.each do |folder| %>
        <tr>
          <td><%= link_to folder.name, folder %></td>
          <td><%= link_to "Edit", edit_folder_path(folder), class: "btn btn-mini btn-warning" %></td>
          <td><%= link_to "Delete", folder, method: :delete, class: "btn btn-mini btn-danger",
                  data: { confirm: "Are you sure you want to delete this folder: '#{folder.name}' and all its content?" } %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

